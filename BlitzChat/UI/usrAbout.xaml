        <Label Content="Donations" Grid.ColumnSpan="2"  Grid.Column="0" Grid.Row="2" FontSize="15" Foreground="#FF00BFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="PayPal:" Grid.Column="0" Grid.Row="3" FontSize="15" Foreground="#FF00BFBF" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox Text="nrwshark@mail.ru" Background="Transparent" IsReadOnly="True" BorderThickness="0" Width="Auto" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="3" FontSize="15" Foreground="#FF00BFBF" VerticalAlignment="Center"/>
        <Label Content="WebMoney R: " Grid.Column="0" Grid.Row="4" FontSize="15" Foreground="#FF00BFBF" HorizontalAlignment="Left" VerticalAlignment="Center"/>
